<div class="postcard">
  <div class= "img-container">
    <% if post.post_image.attached? %>
      <%= cl_image_tag post.post_image.key,
        :gravity => "center",
        :class => "img_cl",
        crop: :fit %>
    <% else %>
      <h5>PlaceHolder</h5>
    <% end %>
  </div>

  <div class= "card-header">
      <% if post.user.profile_picture.attached? %>
          <%= cl_image_tag post.user.profile_picture.key,
            :gravity => "center",
            :class => "avatar-bordered",
            crop: :fit %>
          <% else %>
            <img src="https://res.cloudinary.com/dxdyu4tqu/image/upload/v1683908905/profile_pictures/photo-1583795128727-6ec3642408f8.jpg" alt="", class= "avatar-bordered">
          <% end %>
      <span class="username"><%= post.user.user_name %></span>
  </div>

  <div class="card-title">
    <div>
      <h6><strong><%= link_to post.title, post %></strong></h6>
      <h6>Distance from user</h6>
    </div>
    <div class="btn-set">
      <button type="button" class="btn btn-dark btn-circle btn-sm"><i class="fa-solid fa-heart icon-detail"></i></button>
      <button type="button" class="btn btn-dark btn-circle btn-sm"><i class="fa-solid fa-comment icon-detail"></i></button>
      <%#= post.likes.count %> <%#= (post.likes.count) == 1 ? 'Like' : 'Likes'%>
    </div>
  </div>

  <div class="overlay-container" >
    <div class="overlay-top">
      <div class="overlay-top-left">
        <i class="fa-solid fa-heart"></i>
        <span class="likes-count"><%= post.likes.count %></span>
      </div>
      <div class="overlay-top-right">
        <i class="fa-solid fa-comment"></i>
        <span class="comments-count"><%= post.comments.count %></span>
      </div>
    </div>

    <div class="overlay-bottom">
    </div>

  </div>

</div>
