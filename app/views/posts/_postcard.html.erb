<div class="card shadow-sm">
            <div width="100%" height="225">
              <img src=<%= post.post_image %> alt="post image" width="100%" height="100%">
            </div>
            <div class="card-body">
              <h6><strong><%= link_to post.title, post %></strong></h6>
              <h6><strong><%= post.title %></strong></h6>
              <h6>Distance from user</h6>
              <h6><%= post.body %></h6>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">Likes</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Comments</button>
                </div>
              </div>
            </div>
          </div>
