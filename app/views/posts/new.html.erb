
    <div class="container pt-5">
      <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
          <form action="#" class="row">
            <h2 class="text-center mb-5">Create your post</h2>
            <div class="col-12 mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control">
            </div>
            <div class="col-12 mb-3">
              <label for="body" class="form-label">Body</label>
              <input type="text" class="form-control">
            </div>
            <div class="col-6 mb-3">
              <label for="Lat" class="form-label">Lat</label>
              <input type="float" class="form-control">
            </div>
            <div class="col-6 mb-3">
              <label for="Lng" class="form-label">Lng</label>
              <input type="float" class="form-control">
              </div>
              <%= form_with model: @post, method: :post do |f| %>

            <div class="col-12 mb-3">
              <div class="form-group">
              <%= f.label :post_image %>
              <%= f.file_field :post_image, class: "form-control" %>
            </div>
            </div>
            <div class="col-12">
              <input type="submit" value="Create Post" class="btn btn-primary btn-lg w-100">
            </div>
          </form>
        </div>
      </div>
<% end %>
